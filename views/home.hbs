{{#if removed}}
<div class="blue white-text sms">
  <div class="text-sms row">User has been successfully removed. 
    <i class="small material-icons right occult col push-s4">clear</i>
  </div> 
</div>
{{/if}}

<div class="row">
  <div class="col s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <!--TITLE TABLE-->
        <span class="card-title">Users</span>

        <div class="right col push-s2 s4">
          <a href="/add" class="btn add_user waves-orange">Add user</a>
        </div>
        <table class="striped centered">
          <thead>
            <tr>
              <th>#</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
            <tr>
              <td>{{ id }}</td>
              <td>{{ first_name }}</td>
              <td>{{ last_name }}</td>
              <td>{{ email }}</td>
              <td>{{ phone }}</td>
              <td>
                <a href="/view/{{id}}" type="button">view
                  <i class="tiny material-icons">visibility</i>
                </a>
                <a href="/edit/{{id}}" type="button">Edit
                  <i class="tiny material-icons">mode_edit</i>
                </a>
                <a href="/delete/{{id}}" type="button">Delete
                  <i class="tiny material-icons">clear</i>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

  
            