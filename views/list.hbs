<div class="row"> 


  <div class="fullHeightRight"> <!--Container Home-->
    <div class="container text-size-20"> <!--Main Home-->
         <!--Alert-->
      {{#if removed}}
        {{> menssagge}}
      {{/if}}
      {{#if sms}}
        {{> menssagge}}
      {{/if}}

      <!--Table-->
      <a href="/">Home
        <i class="tiny material-icons">home</i>
      </a> 
      <a class="black-text">/</a>
      <a class="black-text">List
        <i class="tiny material-icons">list</i>
      </a>

      <div class="card blue-grey white-text darken-1">
        <!--Table title-->
        <p class="card-title center">Users list</p>
        <!--Button Add-->
        <div class="center">
          <a href="/add" class="btn add_user waves-orange">Add user
            <i class="small material-icons right">person_add</i>
          </a>
        </div> 
        <table class="striped centered">
          <thead>
            <tr>
              <th>#</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
            <tr>
              <td>{{ id }}</td>
              <td>{{ first_name }}</td>
              <td>{{ last_name }}</td>
              <td>{{ email }}</td>
              <td>{{ phone }}</td>
              <td>
                <div class="row">
                  <div class="col s12">
                    <a href="/view/{{id}}" type="button" class="a_view">View
                      <i class="tiny material-icons">visibility</i>
                    </a>
                    <a href="/edit/{{id}}" type="button"class="a_edit" >Edit
                      <i class="tiny material-icons">mode_edit</i>
                    </a>
                    <a href="/delete/{{id}}" type="button" class="a_del">Delete
                      <i class="tiny material-icons">clear</i>
                    </a>
                  </div>
                </div>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table> 
      </div>
      
    </div> <!--End Main Home-->
  </div> <!--End Container Home-->
</div>

           